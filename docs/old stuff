styles.css 



#small-header {
    width: 100%;
    background-color: rgba(0, 0, 0, 0.8); /* Add transparency */
    color: #ffffff; 
    padding: 10px 0;
    box-shadow: 0 2px 5px rgba(255, 255, 255, 0.1); /* Shadow to add depth */
    position: sticky; /* Keep the header fixed on top */
    top: 0;
    z-index: 1000; /* Ensure the header is on top of other elements */
    backdrop-filter: blur(5px); /* Blurs elements behind the header */
  }
  
  #header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px; /* Align with container width */
    margin: 0 auto;
    padding: 0 15px; /* Padding to match the rest of the content */
    box-sizing: border-box; /* Ensure padding does not increase width */
  }
  
  #header-left {
    font-size: 1.2em;
    font-weight: bold;
    flex-grow: 1; /* Pushes the GitHub icon to the far right */
  }
  
  #header-right {
    display: flex; /* Display as flex to align the icons horizontally */
    gap: 15px; /* Space between the icons */
  }
  
  #header-right a {
    color: #ffffff;
    font-size: 1.5em;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
  }
  
  #header-right a:hover {
    color: #cccccc; /* Light grey for hover effect */
  }
  
  
  body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #000000; /* Set background to black */
    color: #ffffff; /* Set text color to white */
    margin: 0;
    padding: 0;
  }
  
  #container {
    display: flex;
    background-color: #000000; /* Set container background to black */
    color: #ffffff; 
    max-width: 1200px; 
    margin: 0 auto; /* Center the container */
    min-height: calc(100vh - 60px); /* Adjust to leave space for header/footer */
    flex-direction: row; /* Ensure it is set to row for proper flex behavior */
    align-items: stretch; /* Stretches the children to fill the container height */
  }
  
  #sidebar {
    width: 220px;
    background: #000000; /* Black background for sidebar */
    color: #ffffff; /* White text for sidebar */
    padding: 15px;
    box-shadow: 2px 0 5px rgba(255, 255, 255, 0.1); /* Lighter shadow for contrast */
    border-right: 2px solid rgba(255, 255, 255, 0.2); /* Creates a vertical line on the right */
  }
  #sidebar ul {
    list-style: none;
    padding: 0;
  }
  
  #sidebar ul li {
    margin-bottom: 10px;
  }
  
  #sidebar ul li a {
    text-decoration: none;
    color: #ffffff; /* White text for sidebar links */
    padding: 8px;
    display: block;
    transition: background-color 0.3s ease-in-out;
  }
  
  #sidebar ul li a.active {
    background-color: #444444;
    border-radius: 5px;
    font-weight: bold;
  }
  
  #sidebar ul li a:hover {
    background-color: #222222; /* Slightly lighter black for hover effect - use this too #333333*/ 
    border-radius: 3px; /* 5px*/
  }
  
  #content {
    flex-grow: 1;
    padding: 30px;
    color: #ffffff; /* Ensure content text is white */
    background-color: #000000; /* Set content background to black */
    overflow-y: auto;
    /* max-width: 1000px; */
  }
  iframe {
    width: 100%;
    height: calc(100vh - 60px);
    border: none;
  }
  
  #primary-design {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 50px;
    flex-wrap: wrap; /* Allows images to wrap on smaller screens */
  }
  
  .image-container {
    text-align: center;
    max-width: 70%; /* Restrict image container size */
  }
  
  .primary-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
  }
  
  .image-description {
    margin-top: 10px;
    color: #ffffff;
    font-size: 1em;
  }
  
  @media (max-width: 768px) {
    #primary-design {
      flex-direction: column;
      gap: 30px;
    }
  }
  
  footer {
    text-align: center;
    padding: 20px 0; /* Extra spacing (prev 10px) */
    background: #000000; /* Black background for footer */
    color: #ffffff; /* White text for footer */
    position: static; /* Instead of fixed, or adjust height dynamically and use static */
    bottom: 0;
    width: 100%;
    margin-top: auto; /* Push footer to the bottom */
  }

  
